<Window
    x:Class="AY.LearningTag.App.ControllSample.TabControl.TabControlSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AY.LearningTag.App.ControllSample.TabControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TabControlSample"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=local:TabControlSampleViewModel}"
    mc:Ignorable="d">
    <Grid>
        <TabControl ItemsSource="{Binding ViewModels}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}" />
                </DataTemplate>
            </TabControl.ItemTemplate>


            <!--<TabControl.ContentTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Content}" />
                </DataTemplate>
            </TabControl.ContentTemplate>-->

            <TabControl.Resources>
                <DataTemplate DataType="{x:Type local:TabItemViewModelA}">
                    <local:TabA />
                </DataTemplate>

                <DataTemplate DataType="{x:Type local:TabItemViewModelB}">
                    <local:TabB />
                </DataTemplate>
            </TabControl.Resources>
        </TabControl>
    </Grid>
</Window>
