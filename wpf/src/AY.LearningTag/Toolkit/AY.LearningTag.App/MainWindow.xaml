<Window
    x:Class="AY.LearningTag.App.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:AY.LearningTag.App"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="400"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <ListBox
            Grid.Row="0"
            Background="#2a2f46"
            ItemContainerStyle="{StaticResource ListBoxItemStyleA}"
            ItemTemplate="{StaticResource ListBoxItemDateTemplate}"
            Style="{StaticResource ListBoxStyle}">
            <!--<ListBox.ItemTemplate>
        <DataTemplate></DataTemplate>
    </ListBox.ItemTemplate>-->
            <ListBoxItem>Item 1</ListBoxItem>
            <ListBoxItem>Item 2</ListBoxItem>
            <ListBoxItem>Item 3</ListBoxItem>
            <ListBoxItem>Item 4</ListBoxItem>
            <ListBoxItem>Item 1</ListBoxItem>
            <ListBoxItem>Item 2</ListBoxItem>
            <ListBoxItem>Item 3</ListBoxItem>
            <ListBoxItem>Item 4</ListBoxItem>
        </ListBox>





        <ListBox
            Grid.Row="1"
            Height="100"
            Background="#2a2f46"
            ItemContainerStyle="{StaticResource ListBoxItemStyleB}">
            <!--  设置ListBoxItem的父容器  -->
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <!--<ListBox.ItemTemplate>
                <DataTemplate></DataTemplate>
            </ListBox.ItemTemplate>-->
            <ListBoxItem>Item 1</ListBoxItem>
            <ListBoxItem>Item 2</ListBoxItem>
            <ListBoxItem>Item 3</ListBoxItem>
            <ListBoxItem>Item 4</ListBoxItem>
            <ListBoxItem>Item 1</ListBoxItem>
            <ListBoxItem>Item 2</ListBoxItem>
            <ListBoxItem>Item 3</ListBoxItem>
            <ListBoxItem>Item 4</ListBoxItem>
        </ListBox>
        <StackPanel Grid.Row="2">
            <Button
                Name="btn5"
                Width="100"
                Height="50"
                Foreground="White">
                上传
            </Button>


            <ComboBox Width="200" Height="32">
                <ComboBoxItem>abc</ComboBoxItem>
                <ComboBoxItem>abc</ComboBoxItem>
            </ComboBox>

            <ProgressBar
                Height="30"
                Background="#727992"
                Foreground="Red"
                Value="50" />

            <Line
                Stroke="Red"
                StrokeThickness="4"
                X1="10"
                X2="260"
                Y1="80"
                Y2="100" />
        </StackPanel>


    </Grid>
</Window>
