<Window
    x:Class="LearningTagApp.Views.UserRegistWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:rules="clr-namespace:LearningTag.Shared.ValidationRules;assembly=LearningTag.Shared"
    xmlns:vc="clr-namespace:LearningTag.Shared.ValueConverters;assembly=LearningTag.Shared"
    prism:ViewModelLocator.AutoWireViewModel="True">
    <Window.Resources>
        <ResourceDictionary>
            <vc:SexConverter x:Key="SexConvert" />
        </ResourceDictionary>
    </Window.Resources>
    <!--  监听整个Window的验证操作  -->
    <i:Interaction.Behaviors>
        <rules:ValidationErrorsBehavior HasValidationError="{Binding IsInvalid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </i:Interaction.Behaviors>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="用户名" />
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="邮箱" />
        <TextBlock
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="手机号码" />
        <TextBlock
            Grid.Row="3"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="16"
            Text="性别" />

        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Width="200"
            VerticalAlignment="Center"
            FontSize="16"
            Text="{Binding User.UserName}" />

        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            VerticalAlignment="Center"
            FontSize="16">
            <TextBox.Text>
                <Binding NotifyOnValidationError="True" Path="User.Mail">
                    <Binding.ValidationRules>
                        <rules:MailValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>
        <TextBox
            Name="txtPhone"
            Grid.Row="2"
            Grid.Column="1"
            Width="200"
            VerticalAlignment="Center"
            FontSize="16" Validation.Error="txtPhone_Error">
            <TextBox.Text>
                <Binding
                    NotifyOnValidationError="True"
                    Path="User.Phone"
                    UpdateSourceTrigger="LostFocus">
                    <Binding.ValidationRules>
                        <rules:PhoneValidationRule />
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>

        </TextBox>
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Width="200"
            VerticalAlignment="Center"
            FontSize="16"
            Text="{Binding User.Sex, Converter={StaticResource SexConvert}}" />

        <StackPanel
            Grid.Row="4"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button Width="100" Content="取消" />
            <Button
                Width="100"
                Command="{Binding SaveUserRegistCommand}"
                Content="保存" />
        </StackPanel>


    </Grid>
</Window>
