<Window x:Class="S12_6.DongTaiShuJuJiHeZhanShi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S12_6"
        mc:Ignorable="d"
        Title="动态数据集合展示" Height="450" Width="800" >
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="6">
            <TextBlock Text="请输入内容：" VerticalAlignment="Center"/>
            <TextBox x:Name="txtInput" Width="160"/>
            <Button Content="添加" Margin="10,0,0,0" Padding="12,2" x:Name="btnAdd" Click="btnAdd_Click"/>
            <Button Content="删除选中项" Margin="15,0,0,0" Padding="12,2" x:Name="btnRemove" Click="btnRemove_Click"/>
        </StackPanel>
        <ListBox Grid.Row="1" Margin="3" x:Name="lb" />
    </Grid>
</Window>
