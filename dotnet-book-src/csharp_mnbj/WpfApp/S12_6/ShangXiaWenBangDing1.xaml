<Window x:Class="S12_6.ShangXiaWenBangDing1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S12_6"
        mc:Ignorable="d"
        Title="上下文绑定简单示例" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBox x:Name="txtInput" FontSize="13" />
            <GroupBox Margin="2,13,2,3" Header="输入的文本">
                <TextBlock FontFamily="宋体" FontSize="15" Foreground="Blue"  
                Text="{Binding Path=Text,Mode=OneWay,ElementName=txtInput}"/>
            </GroupBox>
        </StackPanel>
    </Grid>
</Window>
