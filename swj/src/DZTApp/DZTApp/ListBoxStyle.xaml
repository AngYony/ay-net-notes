<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/ScrollViewerStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  ListBox本身的样式设置  -->
    <Style x:Key="ListBoxStyle" TargetType="ListBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <Border Background="{TemplateBinding ListBox.Background}" CornerRadius="5">
                        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                            <!--  使ListBoxItem都在UniformGrid中  -->
                            <!--<UniformGrid
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsItemsHost="True" />-->

                            <StackPanel
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                IsItemsHost="True"
                                Orientation="Vertical" />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--  设置ItemContainerStyle的样式A  -->
    <Style x:Key="ListBoxItemStyleA" TargetType="ListBoxItem">
        <!--  value设为Stream，则内容会填充整个容器  -->
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Height" Value="50" />
        <Setter Property="Width" Value="279" />
        <Setter Property="Margin" Value="10" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid Background="Transparent">
                        <!--<Border Background="#454e6d" CornerRadius="5" />-->
                        <!--<Border x:Name="MouseOverBorder" />-->
                        <Border
                            x:Name="SelectedBorder"
                            Background="#454e6d"
                            CornerRadius="5" />
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="SelectedBorder" Property="Background" Value="#1196ff" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="SelectedBorder" Property="Background" Value="#1196ff" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>




    <!--  设置ItemContainerStyle的样式B：渐变选择  -->
    <Style x:Key="ListBoxItemStyleB" TargetType="ListBoxItem">
        <!--  value设为Stream，则内容会填充整个容器  -->
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Top" />
        <Setter Property="Height" Value="119" />
        <Setter Property="Width" Value="274" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid>
                        <Rectangle
                            x:Name="bg"
                            Fill="#454e6d"
                            RadiusX="5"
                            RadiusY="5" />
                        <ContentPresenter
                            Margin="20,20,0,0"
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            TextElement.Foreground="#f6fafd" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bg" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#2e60c1" />
                                        <GradientStop Offset="1" Color="#21b1dc" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="bg" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#2e60c1" />
                                        <GradientStop Offset="1" Color="#21b1dc" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>



    <Style x:Key="ListBoxItemStyleC" TargetType="ListBoxItem">
        <!--  value设为Stream，则内容会填充整个容器  -->
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Height" Value="119" />
        <Setter Property="Width" Value="274" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    <Grid>
                        <Rectangle
                            x:Name="bg"
                            Fill="#454e6d"
                            RadiusX="5"
                            RadiusY="5" />
                        <ContentPresenter
                            HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                            VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                            TextElement.Foreground="#f6fafd" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="bg" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#2e60c1" />
                                        <GradientStop Offset="1" Color="#21b1dc" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="bg" Property="Fill">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="#2e60c1" />
                                        <GradientStop Offset="1" Color="#21b1dc" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>


    </Style>




    <!--  一般不建议把DataTemplate放在资源字典中，可以直接放到控件的ContentTemplate、ItemsControl、CellTemplate属性下，且DataTemplate仅适用于Binding  -->
    <DataTemplate x:Key="ListBoxItemDateTemplate">
        <StackPanel VerticalAlignment="Center">
            <TextBlock
                Margin="10"
                FontSize="14"
                Foreground="#f6fafd"
                Text="{Binding}" />
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>

<!--
    1. 控件模板习惯上通过Style中的Template来指定
-->